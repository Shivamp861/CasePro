@model Modelcasepro.ViewModel.ActivitySummary
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@



<div class="panel panel-default activitysummary">

    <div class="container-fluid">
        <div class="main-table table-responsive" style="padding:20px 10px;">
            <!--Table 1 starts-->

            <div class=" clearfix table1 " id="" pt-5>
                <h5 style="padding-left:7px;"><b>Activity Details</b></h5>
                <table class="table table-bordered">
                    <thead style="background-color:lightgray;">
                        <tr>

                            <th data-field="Activity Dates">Activity Dates</th>
                            <th data-field="Day or Night">Day or Night</th>
                            <th data-field="Customer">Customer</th>
                            <th data-field="Type Of activity">Type Of activity</th>
                            <th data-field="Site Address">Site Address</th>
                            <th data-field="Summary Of Works">Summary Of Works</th>

                      




                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Activity)
                        {
                            <tr>
                                <td>@(item.ActivityDate.HasValue ? item.ActivityDate.Value.Date.ToString("dd-MM-yyyy") : "")</td>
                                <td>@item.Dayornight</td>
                                <td>@item.customer</td>
                                <td>@item.Type</td>
                                <td>@item.SiteAddress</td>
                                <td>@item.SummaryOfWorks</td>
                                

                            </tr>
                        }



                    </tbody>
                </table>

            </div>
            <!--Table 1 ends-->
            <!--Table 2 starts-->
            <div class="clearfix table1 " id="" pt-5>
                <h5 style="padding-left:7px;"><b>Resource Details </b></h5>
                <table class="table table-bordered ">
                    <thead style="background-color:lightgray;">
                        <tr>

                            <th data-field="Resource Type">Resource Type</th>
                            <th data-field="Shift">Shift</th>
                            <th data-field="DayNight">Day/Night</th>
                            <th data-field="Name">Name</th>
                            <th data-field="Comments">Comments</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ResourseDatas)
                        {

                            <tr>
                                <td>@item.ResourceType</td>
                                <td>@item.Shift</td>
                                <td>@item.DayNight</td>
                                <td>@item.Name</td>
                                <td>@item.Comments</td>

                            </tr>

                        }

                    </tbody>
                </table>

            </div>
            <!--Table 2 ends-->
            <!--Table 3 starts-->

            <div class="clearfix table1 " id="" pt-5>

                @if (Model.ActivityType == "Site Installation" || Model.ActivityType == "Site Uplift")
                {
                    if (Model.ActivityType == "Site Installation")
                    {
                        <h5 style="padding-left:7px;"><b>Site Installation</b></h5>
                    }
                    else{

                        <h5 style="padding-left:7px;"><b>Site Uplift</b></h5>
                    }

                    <table class="table table-bordered ">
                        <thead style="background-color:lightgray;">
                            <tr>
                                <th data-field="Labour Supplier">Labour Supplier</th>
                                <th data-field="Supplier Contact">Supplier Contact</th>
                                <th data-field="Number or persons supplied">Number or persons supplied</th>
                                <th data-field="Barrier Type">Barrier Type</th>
                                <th data-field="Quantity of installed Barriers">Quantity of installed Barriers</th>
                                <th data-field="Barrier start and finish location">Barrier start and finish location</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sitem in Model.Siteinstallations)
                            {
                                <tr>
                                    <td>@sitem.LabourSupplier</td>
                                    <td>@sitem.SupplierContact</td>
                                    <td>@sitem.NoOfPersoneSupplied</td>
                                    <td>@sitem.BarrierType</td>
                                    <td>@sitem.BarrierQty</td>
                                    <td>@sitem.BarrierStartAndFinishLocation</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h5 style="padding-left:7px;"><b>Trailer Detail Out Bound</b></h5>
                    <table class="table table-bordered ">
                        <thead style="background-color:lightgray;">
                            <tr>
                                <th data-field="Trailer supplier">Trailer supplier</th>
                                <th data-field="Trailer Number">Trailer Number</th>
                                <th data-field="Load Quantity">Load Quantity</th>
                                <th data-field="Transport Supplier">Load at Depot</th>
                                <th data-field="Depart From">Depot Depart From</th>
                                <th data-field="Vehicle Reg">Date to be loaded</th>
                                <th data-field="Trailer Supplier">Loaded by</th>



                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Trailer)
                            {
                                if (item.IsOutBound == true)
                                {
                                    <tr>
                                        <td>@item.TrailerSupplier</td>
                                        <td>@item.TrailerNumber</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.LoadDepot</td>
                                        <td>@item.DepartFrom</td>
                                        <td>@(item.Date.HasValue ? item.Date.Value.Date.ToString("dd-MM-yyyy") : "")</td>
                                        <td>@item.LoadedTippedBy</td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>

                }


            </div>
            <!--Table 3 ends-->
            <!--Table 4 starts-->
            @if (Model.ActivityType == "Yard Loading")
            {
                <div class=" clearfix table1" id="">
                    <h5 style="padding-left:7px;"><b>Trailer Detail Return</b></h5>
                    <table class="table table-bordered ">
                        <thead style="background-color:lightgray;">
                            <tr>
                                <th data-field="Trailer supplier">Trailer supplier</th>
                                <th data-field="Trailer Number">Trailer Number</th>
                                <th data-field="Load Quantity">Load Quantity</th>
                                <th data-field="Depot">Depot</th>
                                <th data-field="Date">Date</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Trailer)
                            {
                                if (item.IsOutBound == false)
                                {
                                    <tr>
                                        <td>@item.TrailerSupplier</td>
                                        <td>@item.TrailerNumber</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.DepartFrom</td>
                                        <td>@(item.Date.HasValue ? item.Date.Value.Date.ToString("dd-MM-yyyy") : "")</td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>

                </div>
            }
            
            <!--Table 4 ends-->

        </div>
    </div>




</div>


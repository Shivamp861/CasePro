    <table class="table table-bordered" id="myTable1">
        <thead>
            <tr>
                <th style="width:200px;">Shift</th>

                <th style="width:150px;">Date</th>

                <th>Summary of Works</th>
                <th style="width:70px;"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <select class="form-control" id="Shift1to8">
                        <option>
